<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image CRUD</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Image CRUD Operations</h1>
    <a href="/create">Create New Image</a>
    <table border="1">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% images.forEach(image => { %>
                <tr>
                    <td><img src="<%= image.imagePath %>" alt="<%= image.name %>" width="100"></td>
                    <td><%= image.name %></td>
                    <td><%= image.email %></td>
                    <td>
                        <form action="/update/<%= image._id %>" method="get" style="display:inline;">
                            <button type="submit">Update</button>
                        </form>
                        <form action="/delete/<%= image._id %>" method="post" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this image?');">Delete</button>
                        </form>
                        <form action="/view/<%= image._id %>" method="get" style="display:inline;">
                            <button type="submit">View</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
